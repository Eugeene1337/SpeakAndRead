@model IEnumerable<SpeakAndRead.Models.Language>

@{
    ViewData["Title"] = "Index";
}

<h1>Languages</h1>

<div class="btn btn-primary">

    <a asp-action="Create" style="color:whitesmoke">Create new</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            <td>
                <div class="btn btn-primary">

                    <a asp-action="Edit" asp-route-id="@item.LanguageId" style="color:whitesmoke">Edit</a>
                </div>

                <div class="btn btn-primary">

                    <a asp-action="Details" asp-route-id="@item.LanguageId" style="color:whitesmoke">Details</a>
                </div>
                <div class="btn btn-danger">

                    <a asp-action="Delete" asp-route-id="@item.LanguageId" style="color:whitesmoke">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
